        <TextBox x:Name="address" HorizontalAlignment="Left" Height="26" Margin="786,487,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" TextChanged="TextBox_TextChanged_13"/>
        <TextBox x:Name="country" HorizontalAlignment="Left" Height="26" Margin="786,532,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304" TextChanged="TextBox_TextChanged_14"/>


